{
  "preset": "laravel",
  "exclude": [
    "public/blog-api"
  ],
  "rules": {
    "concat_space": {
      "spacing": "one"
    },
    "spaces_inside_parentheses": {
      "space": "none"
    },
    "function_declaration": {
      "closure_fn_spacing": "none"
    },
    "declare_parentheses": true,
    "not_operator_with_successor_space": false,
    "no_trailing_comma_in_singleline": false
  }
}
